{
  "name": "twoot",
  "version": "0.1.2",
  "description": "toot and/or tweet. a lowest-common-denominator api for simplifying crossposting to mastodon and twitter",
  "keywords": [
    "mastodon",
    "twitter",
    "sns",
    "crosspost"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "s <https://github.com/lostfictions>",
  "homepage": "https://github.com/lostfictions/twoot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lostfictions/twoot.git"
  },
  "bugs": {
    "url": "https://github.com/lostfictions/twoot/issues"
  },
  "files": [
    "!dist/**/*.test.*",
    "dist/"
  ],
  "license": "AGPL-3.0",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint --color 'src/**/*.ts' --max-warnings=0",
    "test:jest": "jest --colors",
    "test:prettier": "prettier -l 'src/**/*'",
    "prettier": "prettier 'src/**/*' --write",
    "jest": "jest --colors --watch",
    "prepublishOnly": "run-s -l test build"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "masto": "^4.2.4",
    "nanoid": "^3.1.32",
    "twitter-api-client": "^1.5.1"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/jest": "^27.4.0",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^16.11.19",
    "eslint": "^8.6.0",
    "eslint-config-lostfictions": "^3.1.0",
    "jest": "^27.4.7",
    "mock-fs": "^5.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "engines": {
    "node": ">=14"
  }
}
