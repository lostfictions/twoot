{
  "name": "twoot",
  "version": "0.0.2",
  "description": "dead simple tweets and toots.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "prepublishOnly": "npm run build",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:tslint": "tslint --project .",
    "watch:ts": "tsc -w",
    "watch:test": "jest --colors --watch"
  },
  "author": "s <https://github.com/lostfictions>",
  "homepage": "https://github.com/lostfictions/twoot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lostfictions/twoot.git"
  },
  "bugs": {
    "url": "https://github.com/lostfictions/twoot/issues"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "form-data": "^2.3.1",
    "got": "^8.0.1",
    "twit": "^2.2.9"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/got": "^7.1.6",
    "@types/jest": "^21.1.9",
    "@types/node": "^8.5.1",
    "@types/twit": "^2.2.8",
    "jest": "^22.0.4",
    "npm-run-all": "^4.1.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
